generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  Role
  User
}

model Teacher {
  id        String  @id @default(uuid())
  fullName  String
  photo     String
  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])
}

model Vote {
  id     String  @id @default(uuid())
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id            String          @id @default(uuid())
  role          Roles
  votes         Vote[]
  email         String          @unique
  salt          String
  password      String
  RefreshToken  RefreshToken[]
  Like          Like[]
  TeacherReview TeacherReview[]
}

model TeacherReview {
  id        String  @id @default(uuid())
  message   String
  isChecked Boolean
  userId    String
  user      User    @relation(fields: [userId], references: [id])
  Like      Like[]
}

model RefreshToken {
  token  String @unique
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Like {
  id              String        @id @default(uuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  teacherReview   TeacherReview @relation(fields: [teacherReviewId], references: [id])
  teacherReviewId String
}

model Subject {
  id      String    @id @default(uuid())
  title   String
  Teacher Teacher[]
}
